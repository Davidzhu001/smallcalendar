<div id="idates">
  <h2 id="month">
    <%= link_to "<", date: @date.prev_month %>
    <%= @date.strftime("%B %Y") %>
    <%= link_to ">", date: @date.next_month %>
  </h2>
  <%= calendar @date do |date| %>
    <%= date.day %>
      <% if @idates.between(date) %>
        <ul>        
          <% @idates.dating(date).each do |idate| %>
              <li><%= link_to idate.title, idate %></li>
          <% end %>
        </ul>
    <% end %>
  <% end %>
</div>